		if(dbClean($_POST['remove_images']) == 1){
			$this->_delte_old_files(
			array(
				'field' => 'slideshow_image', 
				'par'	=> array('slideshow_id' => $id)
			));

			$this->db->update("mt_slideshow",array("slideshow_image"=>NULL),array("slideshow_id"=>$id));
